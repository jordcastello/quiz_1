
    <h1>Supporters Request</h1>

    <hr>

    <table>
    <%= form_tag "/supporter" do %>
      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>
      <div>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
      </div>
      <div>
        <%= label_tag :Department %>
        <%= check_box_tag(:sales) %>
        <%= label_tag(:sales, "Sales") %>
        <%= check_box_tag(:marketing) %>
        <%= label_tag(:marketing, "Marketing") %>
        <%= check_box_tag(:technical) %>
        <%= label_tag(:technical, "Technical") %>

      </div>
      <div>
        <%= label_tag :message %>
        <%= text_field_tag('message', nil, class: 'input-xxlarge') %>
      </div>

      <%= submit_tag %>


    <% end %>
